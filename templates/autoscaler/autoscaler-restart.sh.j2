#!/bin/bash

echo "[START] autoscaler-restart"

kubectl --kubeconfig /opt/consul/.kube/config -n kube-system scale --replicas=0 statefulset automium-cluster-autoscaler
kubectl --kubeconfig /opt/consul/.kube/config -n kube-system scale --replicas=1 statefulset automium-cluster-autoscaler

echo "[END] autoscaler-restart"
